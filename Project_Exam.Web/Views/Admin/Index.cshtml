@model IEnumerable<Project_Exam.Web.Models.RoleViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Rol İşlemleri</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                
            <td>
                    @Html.ActionLink("Güncelle", "RoleUpdate", new {  id=item.Id  }) |
                    @Html.ActionLink("Sil", "DeleteRole", new {  id=item.Id  })
            </td>
        </tr>
}
    <td><a href="/Admin/CreateRole" class="btn btn-primary">Rol Oluştur</a></td>
    </tbody>
</table>
